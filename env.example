# SMTP Voicemail Proxy Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Outbound SMTP Server (for forwarding enhanced emails)
OUTBOUND_SMTP_HOST=mail.your-company.com
OUTBOUND_SMTP_PORT=587
OUTBOUND_SMTP_USER=voicemail-proxy@your-company.com
OUTBOUND_SMTP_PASSWORD=your-smtp-password
OUTBOUND_SMTP_USE_TLS=true

# Google Cloud Speech-to-Text
GOOGLE_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/service-account.json

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# SMTP Server Settings
SMTP_PORT=1025
SMTP_AUTH_REQUIRED=false
# SMTP_AUTH_USER=avaya
# SMTP_AUTH_PASSWORD=avaya-password

# TLS/SSL Configuration (optional)
# SMTP_TLS_CERT=/app/certs/smtp.crt
# SMTP_TLS_KEY=/app/certs/smtp.key

# Google Speech-to-Text Settings
GOOGLE_LANGUAGE_CODE=en-US
GOOGLE_MODEL=telephony
GOOGLE_ENABLE_WORD_TIME_OFFSETS=false
GOOGLE_ENABLE_PROFANITY_FILTER=true
GOOGLE_MAX_ALTERNATIVES=1

# Storage Configuration
STORAGE_CLEANUP_AFTER_HOURS=24
STORAGE_MAX_AUDIO_SIZE_MB=50

# Celery Worker Settings
CELERY_WORKER_CONCURRENCY=4
CELERY_TASK_MAX_RETRIES=3
CELERY_TASK_RETRY_DELAY=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
FLOWER_PORT=5555
FLOWER_BASIC_AUTH=admin:secure-password
HEALTH_PORT=8000

# Development Settings
DEBUG=false
ENVIRONMENT=production